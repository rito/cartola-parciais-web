<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parciais_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/atleta"
            android:layout_width="@dimen/escudo_size"
            android:layout_height="@dimen/escudo_size"
            android:scaleType="centerCrop"
            tools:src="@drawable/atleta" />

        <ImageView
            android:id="@+id/escudoAtleta"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/atleta"
            android:layout_toRightOf="@+id/atleta"
            app:srcCompat="@drawable/sao_paulo" />

        <TextView
            android:id="@+id/nome_atleta"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="8dp"
            android:layout_toEndOf="@+id/escudoAtleta"
            android:layout_toRightOf="@+id/escudoAtleta"
            android:gravity="bottom|left"
            android:text="Fred"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/atleta_pontuacao"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom|right"
            android:text="23.50"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/atleta_posicao"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/nome_atleta"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-6dp"
            android:layout_toEndOf="@+id/escudoAtleta"
            android:layout_toRightOf="@+id/escudoAtleta"
            android:text="Atacante" />

    </RelativeLayout>

</RelativeLayout>