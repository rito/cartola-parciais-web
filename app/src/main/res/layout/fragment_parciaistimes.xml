<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parciais_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bgColorOdd"
        android:paddingLeft="4dp"
        android:paddingRight="16dp">

        <ImageView
            android:id="@+id/atleta"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"
            android:scaleType="fitEnd"
            tools:src="@drawable/arkenstone_fc" />

        <TextView
            android:id="@+id/posicao"
            android:layout_width="16dp"
            android:layout_height="48dp"
            android:layout_alignTop="@+id/atleta"
            android:layout_toEndOf="@+id/atleta"
            android:layout_toRightOf="@+id/atleta"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="1"
            android:text="01"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/nome_time"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="72dp"
            android:layout_toRightOf="@+id/posicao"
            android:ellipsize="end"
            android:gravity="bottom|left"
            android:maxEms="10"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:scrollHorizontally="true"
            android:text="Arkenstone Futebol Clube FC"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nome_cartoleiro"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/posicao"
            android:layout_alignLeft="@+id/nome_time"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/nome_time"
            android:layout_below="@+id/nome_time"
            android:layout_marginRight="72dp"
            android:layout_marginTop="-7dp"
            android:ellipsize="end"
            android:gravity="top|left"
            android:maxLines="1"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:text="Geovanne Fernandes Duarte Fernandes Duarte" />

        <TextView
            android:id="@+id/atleta_pontuacao"
            android:layout_width="72dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom|right"
            android:text="9999.00"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cartoletas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/nome_cartoleiro"
            android:layout_alignLeft="@+id/atleta_pontuacao"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/atleta_pontuacao"
            android:layout_below="@+id/atleta_pontuacao"
            style="@android:style/TextAppearance.DeviceDefault.Small"
            android:layout_marginTop="-7dp"
            android:gravity="top|right"
            android:paddingTop="2dp"
            android:text="C$ 999.99" />

    </RelativeLayout>

</RelativeLayout>