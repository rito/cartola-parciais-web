<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/parciais_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/bgColorOdd"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/atleta"
            android:layout_width="32dp"
            android:layout_height="@dimen/escudo_size"
            android:scaleType="centerCrop"
            tools:src="@drawable/arkenstone_fc" />

        <TextView
            android:id="@+id/posicao"
            android:layout_width="12dp"
            android:layout_height="@dimen/escudo_size"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:layout_toEndOf="@+id/atleta"
            android:layout_toRightOf="@+id/atleta"
            android:gravity="center_vertical|center_horizontal"
            android:text="01"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/nome_time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/posicao"
            android:layout_toRightOf="@+id/posicao"
            android:gravity="bottom|left"
            android:paddingBottom="0dp"
            android:text="Arkenstone FC"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nome_cartoleiro"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/nome_time"
            android:layout_alignStart="@+id/nome_time"
            android:layout_below="@+id/nome_time"
            android:layout_marginTop="-6dp"
            android:gravity="top|left"
            android:text="Geovanne Duarte" />

        <TextView
            android:id="@+id/atleta_pontuacao"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="bottom|right"
            android:text="9999.00"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cartoletas"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/atleta_pontuacao"
            android:layout_marginTop="-6dp"
            android:gravity="top|right"
            android:text="C$ 999.99" />

    </RelativeLayout>

</RelativeLayout>